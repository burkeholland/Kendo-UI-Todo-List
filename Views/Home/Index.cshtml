
<script src="@Url.Content("~/Scripts/templateLoader.js")"></script>
<script src="@Url.Content("~/Scripts/" + @ViewData["mode"] + ".js")"></script>

<div>
    <div id="title">
        <h2>Todo List - @ViewData["title"]</h2>
        <button id="saveDeletes" class="k-button" data-event="saveAll">Save Deletes</button>
    </div>
    <hr />
    <input type="text" id="new-item" class="title" />
    <button id="addItem" class="k-button add-button title" data-event="addItem">Add</button>
    <ul id="items"></ul>
</div>

<script>

    $(function () {

        // create a function for getting the root path 
        root = function (url) {
            var path = '@Request.ApplicationPath'
            if (path != '/') path = path + '/'
            return path + url;
        }

        app.root = root;
        app.init();

        if (app.mode === "batch") $("#saveDeletes").css("opacity", "1");

    });

 </script>

<script src="@Url.Content("~/Scripts/events.js")"></script>





